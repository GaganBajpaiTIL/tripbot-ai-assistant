{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "FastAPI: Launch TripBot",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/venv/bin/python",
            "module": "uvicorn",
            "args": [
                "tripbot.app:app",
                "--host", "0.0.0.0",
                "--port", "50001",
                "--reload"
            ],
            "envFile": "${workspaceFolder}/.env.example",
            "cwd": "${workspaceFolder}/src",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONUNBUFFERED": "1"
            }
        }
    ]
}